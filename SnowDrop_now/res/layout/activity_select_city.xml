<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/select_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#FFB6C1" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingBottom="15dip" >
	    
        <RelativeLayout 
            android:id="@+id/city_layout0"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="10dip" >	        
	        
	        <TextView
	            android:id="@+id/layout0_back"
	            android:text="《 返回"
	            android:textSize="18sp"
	            android:textColor="#ffffff"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" /> 
	        <TextView 
	            android:id="@+id/layout0_title"
	            android:layout_toRightOf="@+id/layout0_back"
	            android:gravity="center"
	            android:text="城市选择       "
	            android:textSize="20sp"
	            android:textColor="#ffffff"
	            android:layout_height="match_parent"
	            android:layout_width="match_parent" />
	        	    
	    </RelativeLayout>
	    
        <ImageView 
			android:id="@+id/lufei"
			android:src="@drawable/lufei"
			android:layout_below="@+id/city_layout0"
			android:layout_width="350dp"
			android:layout_height="350dp"
	       	android:gravity="center_horizontal" />
        
        <View 
	        android:id="@+id/fengxi_0"
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:layout_below="@+id/lufei"
		    android:background="#FFE7E7E7" />
        
        <RelativeLayout 
            android:id="@+id/city_layout1"
            android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/fengxi_0"
		    android:paddingLeft="@dimen/activity_vertical_margin" >
	        
            <TextView 
	            android:id="@+id/layout1_title"
	            android:text="请选择现在显示的城市："
	            android:textSize="18sp"
	            android:textColor="#ffffff"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent" />
            
            <RadioGroup 
                android:id="@+id/layout1_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/layout1_title" >
                <RadioButton 
                    android:id="@+id/choose_1"
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:text="城市一"
	            	android:textSize="18sp"
	            	android:textStyle="bold"
	            	android:checked="true" />
                <RadioButton 
                    android:id="@+id/choose_2"
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:text="城市二"
	            	android:textSize="18sp"
	            	android:textStyle="bold" />
                <RadioButton 
                    android:id="@+id/choose_3"
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:text="城市三"
	            	android:textSize="18sp"
	            	android:textStyle="bold" />
            </RadioGroup>
             
        </RelativeLayout>
        
        <View 
	        android:id="@+id/fengxi_1"
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:layout_below="@+id/city_layout1"
		    android:background="#FFE7E7E7" />
        
        <RelativeLayout 
            android:id="@+id/city_layout2"
            android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/fengxi_1"
		    android:paddingLeft="@dimen/activity_vertical_margin" >
            
            <TextView 
	            android:id="@+id/layout2_title"
	            android:text="目前城市："
	            android:textSize="18sp"
	            android:textColor="#ffffff"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent" />
            <TextView 
	            android:id="@+id/layout2_city1"
	            android:layout_below="@+id/layout2_title"
	            android:text="城市一：北京海淀"
	            android:textSize="18sp"
	            android:textColor="#000000"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent" />
            <TextView 
	            android:id="@+id/layout2_city2"
	            android:layout_below="@+id/layout2_city1"
	            android:text="城市二：河南南阳"
	            android:textSize="18sp"
	            android:textColor="#000000"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent" />
            <TextView 
	            android:id="@+id/layout2_city3"
	            android:layout_below="@+id/layout2_city2"
	            android:text="城市三：哈尔滨"
	            android:textSize="18sp"
	            android:textColor="#000000"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent" />
		</RelativeLayout>
		
        <View 
	        android:id="@+id/fengxi_2"
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:layout_below="@+id/city_layout2"
		    android:background="#FFE7E7E7" /> 
		
        <RelativeLayout 
            android:id="@+id/city_layout3"
            android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/fengxi_2"
		    android:paddingLeft="@dimen/activity_vertical_margin" >
            <TextView 
	            android:id="@+id/layout3_title"
	            android:text="更改城市二"
	            android:textSize="18sp"
	            android:textColor="#ffffff"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent" />
            <RelativeLayout 
	            android:id="@+id/layout3_change_city"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout3_title" >
                <Button 
                    android:id="@+id/layout3_submit"
                    android:text="提交"
                    android:layout_alignParentRight="true"
	                android:layout_height="40dp"
                    android:layout_width="wrap_content"/>
	            <EditText 
	                android:id="@+id/layout3_edit"
	                android:layout_toLeftOf="@+id/layout3_submit"
	                android:layout_width="match_parent"
	                android:layout_height="40dp"
	                android:textColor="#ffffff"
	                android:textSize="15sp"
	                android:singleLine="true"
	                android:hint="请输入城市名"/>
            </RelativeLayout>
            
        </RelativeLayout>
        
        <View 
	        android:id="@+id/fengxi_3"
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:layout_below="@+id/city_layout3"
		    android:background="#FFE7E7E7" /> 
		
        <RelativeLayout 
            android:id="@+id/city_layout4"
            android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/fengxi_3"
		    android:paddingLeft="@dimen/activity_vertical_margin" >
            <TextView 
	            android:id="@+id/layout4_title"
	            android:text="更改城市三"
	            android:textSize="18sp"
	            android:textColor="#ffffff"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent" />
            <RelativeLayout 
	            android:id="@+id/layout4_change_city"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout4_title" >
                <Button 
                    android:id="@+id/layout4_submit"
                    android:text="提交"
                    android:layout_alignParentRight="true"
	                android:layout_height="40dp"
                    android:layout_width="wrap_content"/>
	            <EditText 
	                android:id="@+id/layout4_edit"
	                android:layout_toLeftOf="@+id/layout4_submit"
	                android:layout_width="match_parent"
	                android:layout_height="40dp"
	                android:textColor="#ffffff"
	                android:textSize="15sp"
	                android:singleLine="true"
	                android:hint="请输入城市名"/>
            </RelativeLayout>
            
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>